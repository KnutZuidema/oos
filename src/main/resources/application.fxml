<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.Scene?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>
<Scene fx:controller="gui.ApplicationController"
       fx:id="scene"
       xmlns="http://javafx.com/javafx"
       xmlns:fx="http://javafx.com/fxml">
  <GridPane prefHeight="150.0"
            prefWidth="400.0">
    <columnConstraints>
      <ColumnConstraints hgrow="SOMETIMES"/>
    </columnConstraints>
    <rowConstraints>
      <RowConstraints vgrow="SOMETIMES"/>
      <RowConstraints vgrow="SOMETIMES"/>
    </rowConstraints>
    <Text GridPane.columnIndex="0"
          GridPane.halignment="CENTER"
          GridPane.rowIndex="0"
          text="The system is now usable"
          textAlignment="CENTER">
      <font>
        <Font size="20.0"/>
      </font>
    </Text>
    <GridPane GridPane.columnIndex="0"
              GridPane.rowIndex="1">
      <columnConstraints>
        <ColumnConstraints hgrow="SOMETIMES"/>
        <ColumnConstraints hgrow="SOMETIMES"/>
        <ColumnConstraints hgrow="SOMETIMES"/>
      </columnConstraints>
      <rowConstraints>
        <RowConstraints vgrow="SOMETIMES"/>
      </rowConstraints>
      <Button GridPane.columnIndex="0"
              GridPane.halignment="CENTER"
              GridPane.rowIndex="0"
              onAction="#exit"
              text="Cancel"/>
      <Button GridPane.columnIndex="1"
              GridPane.halignment="CENTER"
              GridPane.rowIndex="0"
              onAction="#login"
              text="Login"/>
      <Button GridPane.columnIndex="2"
              GridPane.halignment="CENTER"
              GridPane.rowIndex="0"
              onAction="#signUp"
              text="Sign Up"/>
    </GridPane>
  </GridPane>
</Scene>